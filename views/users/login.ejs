                <div>
                    <label for="username" class="form-label" class="needs-validation" novalidation>Username</label>
                                                             
                
                
                         <input name="username"
                         placeholder="username"
                          class="form-control" 
                          type="text" 
                          required>
                         <br>
                  
                         </div>
    
    
    
    
                
                         <input name="password"
                         placeholder="password"
                          class="form-control" 
                          type="text" 
                          required>
                         <br>
                    
                    
                        
                         </div>
    
    
    <div>
        <button class="btn btn-success"   type="submit" class="col-6 offset-3">Login</button></div>
                
                
    
            </form>
        </div>
    </div>
</body>
</html>