  <% layout('/layout/boilerplate') -%>
  <div class="row mt-3 offset-3">
      <h1 class="col-6 offset-1">Sign up for Shopify</h1>
      <div class="col-6 offset-1">
          <form action="/signup" method="POST" class="needs-validation" novalidate>   
              <div>
                  <label for="username" class="form-label">Username</label>
                  <input name="username" placeholder="username" id="username" class="form-control" type="text" required>
                  <div class="valid-feedback">Looks Good</div>
              </div>
  
              <div>
                  <label for="email" class="form-label">Email</label>
                  <input name="email" placeholder="email" id="email" class="form-control" type="text" required>
                  <div class="valid-feedback">Looks Good</div>
              </div>
  
              <div>
                  <label for="password" class="form-label">Password</label>
                  <input name="password" placeholder="password" id="password" class="form-control" type="password" required>
                  <div class="valid-feedback">Looks Good</div>
              </div>
  
              <div class="d-flex justify-content-center mt-3">
                  <button class="btn btn-success">Signup</button>
              </div>
          </form>
      </div>
  </div>
  
