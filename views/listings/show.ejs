<% layout('/layout/boilerplate') -%>


<div class="row mt-3">
    <div class="col-8 offset-2">
    <body>
        <h3> <%= listings.title %> </h3>
        </div>
    
        <div class="card col-6 offset-3">
            <img src="<%= listings.image  %>>" class="card-img-top show-image" alt="listing_image">
      <div class="card-body">
        <p class="card-text">
            <b><%= listings.title %> </b> <br>
           <b> Owned by <i><%=listings.owner.username %></i> </b>
            <br>
            <%= listings.description %> <br>
            &#8377;<%= listings.price.toLocaleString("en-IN") %> <br>

            <%= listings.location %> <br>
            <%= listings.country %> <br>


        <br> </p>
        </div>
      
        <div class="btns">
            

      <!-- <form  action="/listings/<%=listings._id  %>/edit" > <button type="button" class="btn btn-primary">Edit </button></form>  -->
      <form action="/listings/<%= listings._id %>/edit" method="GET">
        <button type="submit" class="btn btn-primary">Edit</button>
    </form>
    


<br><br>
 

        <form method="POST" action="/listings/<%= listings._id %>?_method=DELETE"> 
            <button type="submit" class="btn btn-danger">Delete</button>
         </form>
        

        
        </div>
        

        <div class="col-8 offset-3 mb-3">
            <h4>Leave a Review</h4>

            <form action="/listings/<%=listings._id %>/reviews" method="POST" novalidate class="needs-validation">

