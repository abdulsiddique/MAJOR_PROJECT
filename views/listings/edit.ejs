<% layout('/layout/boilerplate') -%>

<body>
    <h3>Edit your Listings </h3>
    <form  method="POST" action="/listings/<%=listings._id %>?_method=PUT">
                                             
<div>

<label for="title" class="form-label" >Title</label>

        <input name="listing[title]"placeholder="enter title" value="<%= listings.title %>" class="form-control">
        <br>
        </div>

        <div>
            <label for="description" class="form-label">Description</label>
       <textarea name="listing[description]" placeholder="enter description"  class="form-control"><%= listings.description %></textarea>
        <br>

        </div>
        <div>
        <label for="image" class="form-label">Image</label>
        <input name="listing[image]" placeholder="enter image  URL/link" type="text" value="<%= listings.image %>" class="form-control">  
        <br>
        </div>

        <div>
            <label for="price" class="form-label">price</label>
        <input name="listing[price]" placeholder="enter price " type="number" value="<%= listings.price %>" class="form-control">    

        <br>
        </div>
        <div>
            <label for="country" class=" form label">country</label>
        <input name="listing[country]" placeholder="enter location" type="text" value="<%= listings.country %>" class="form-control">
        <br>
        </div>
        <div>
            <label for="location" class="form-label">location</label>
        <input name="listing[location]" placeholder="enter location" type="text" value="<%= listings.title %>" class="form-control">
        <br>
        </div>
        <button  class="btn btn-dark">Add</button>

   </form>
</body>
